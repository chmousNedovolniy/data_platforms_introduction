# Hosts
HIVESERVER2_HOST=192.168.1.99
METASTORE_HOST=192.168.1.99
DERBY_HOST=192.168.1.99

# SSH
SSH_USER=team
SSH_KEY=/home/team/.ssh/id_ed25519
SSH_OPTS="-o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null"

# Hive
HIVE_VERSION=4.0.0-alpha-2
HIVE_TGZ_URL=https://dlcdn.apache.org/hive/hive-4.0.0-alpha-2/apache-hive-4.0.0-alpha-2-bin.tar.gz
HIVE_PREFIX=/opt/hive
HIVE_HOME=/opt/hive/current
HIVE_USER=hadoop
HIVE_LOG_DIR=/var/log/hive
HIVE_METASTORE_DB=/var/lib/hive-metastore

# HDFS
HADOOP_HOME=/opt/hadoop/current
HDFS_NAMENODE_URI=hdfs://192.168.1.99:8020
HDFS_WAREHOUSE=/user/hive/warehouse
HDFS_TMP=/tmp

# Ports
HIVESERVER2_PORT=10000
METASTORE_PORT=9083
DERBY_PORT=1527

# Java
JAVA_HOME=/usr/lib/jvm/java-11-openjdk-amd64
