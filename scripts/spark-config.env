# Hosts
SPARK_CLIENT_HOST=192.168.1.99
HIVESERVER2_HOST=192.168.1.99
METASTORE_HOST=192.168.1.99

# SSH
SSH_USER=team
SSH_KEY=/home/team/.ssh/id_ed25519
SSH_OPTS="-o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null"

# Spark
SPARK_VERSION=3.5.1
SPARK_TGZ_URL=https://dlcdn.apache.org/spark/spark-3.5.1/spark-3.5.1-bin-hadoop3.tgz
SPARK_PREFIX=/opt/spark
SPARK_HOME=/opt/spark/current
SPARK_USER=hadoop
SPARK_LOG_DIR=/var/log/spark

# Hadoop/HDFS
HADOOP_HOME=/opt/hadoop/current
HDFS_NAMENODE_URI=hdfs://192.168.1.99:8020
HDFS_INPUT_PATH=/user/hive/warehouse/demo.db/events
HDFS_OUTPUT_TABLE=demo.events_spark

# Hive Metastore
METASTORE_PORT=9083

# Java
JAVA_HOME=/usr/lib/jvm/java-11-openjdk-amd64
